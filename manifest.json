{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "version": "0.1.0",
    "description": "Base Level Extension",
    "permissions": ["tabs", "storage"],  
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ],
    "action": {
      "default_popup": "hello.html"
    }
  }