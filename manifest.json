{ 
    "manifest_version": 3,

    "name": "Bytey the Browser Buddy",
    "version": "1.0",
    "description": "A fun 8-bit Tamagotchi that keeps you productive!",
    "permissions": ["tabs", "storage", "activeTab", "alarms", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/bytey_icon.png",
        "48": "assets/bytey_icon.png",
        "128": "assets/bytey_icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["monitorList.js", "tamagotchiController.js"],
        "css": ["tamagotchi.css"]
      }
    ],
    "web_accessible_resources" : [{
        "resources":["Checklist_implementation.html", "assets/laptopbyteyv1.png"],
        "matches":["<all_urls>"]
    }]
  }